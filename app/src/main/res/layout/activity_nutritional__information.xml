<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nutritional__information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aa.savethechildren.Nutritional_Information">

    <Button
        android:text="Compare Diets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/compare_Diets"
        android:onClick="Compare_Diets" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:scrollbars="horizontal|vertical"
        android:fadingEdge="horizontal|vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="51dp"
                android:paddingTop="51dp">

                <TextView
                    android:text="Protein:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/protineTextFeild"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

                <TextView
                    android:text="Protein Percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/protein_Percent"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="51dp">

                <TextView
                    android:text="Energy:"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/energyTextField"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

                <TextView
                    android:text="Energy Percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/energy_Percent"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="51dp">

                <TextView
                    android:text="Total Cost:   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/costTextField"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

                <TextView
                    android:text="Cost Percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cost_Percent"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="RI = Recommended Intake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:layout_span="2"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />
            </TableRow>

        </TableLayout>
    </ScrollView>
</HorizontalScrollView>
</RelativeLayout>
